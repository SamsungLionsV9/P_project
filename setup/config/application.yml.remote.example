# ============================================
# MySQL 외부 접근용 application.yml 예시
# ============================================
# 
# 사용법:
# 1. 이 파일을 user-service/src/main/resources/application.yml로 복사
# 2. 아래 설정을 실제 값으로 수정
#
# ============================================

spring:
  application:
    name: car-user-management
  
  main:
    allow-circular-references: true
  
  datasource:
    # ============================================
    # 방법 1: ngrok 사용 (추천)
    # ============================================
    # ngrok 실행 후 출력된 URL 사용
    # 예: ngrok tcp 3306
    # 출력: Forwarding  tcp://0.tcp.ngrok.io:12345 -> localhost:3306
    # ============================================
    url: jdbc:mysql://0.tcp.ngrok.io:12345/car_database?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8&allowPublicKeyRetrieval=true
    
    # ============================================
    # 방법 2: 공인 IP 사용
    # ============================================
    # 공인 IP 확인: curl ifconfig.me
    # url: jdbc:mysql://YOUR_PUBLIC_IP:3306/car_database?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8&allowPublicKeyRetrieval=true
    
    # ============================================
    # 사용자 정보
    # ============================================
    # 외부 접근용 사용자 (create_remote_user.sql 실행 후)
    username: team_user
    password: TeamPassword123!@#  # ⚠️ 반드시 변경하세요!
    
    # 또는 root 사용 (비추천 - 보안 위험)
    # username: root
    # password: YOUR_ROOT_PASSWORD
    
    driver-class-name: com.mysql.cj.jdbc.Driver
    
  jpa:
    hibernate:
      ddl-auto: update  # 개발: update, 운영: validate
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.MySQL8Dialect
        use_sql_comments: true
    
  security:
    jwt:
      secret: Y2FyLXByb2plY3Qtc2VjdXJlLWtleS1mb3Itand0LXRva2VuLWF0LWxlYXN0LTI1Ni1iaXRzLWxvbmctZm9yLWhzMjU2LWFsZ29yaXRobQ==
      expiration: 86400000  # 24시간 (밀리초)
    oauth2:
      client:
        registration:
          # Google 소셜 로그인
          google:
            client-id: 1035321468876-e997jqubsefdrmgsp8m1h21oqs90f17v.apps.googleusercontent.com
            client-secret: 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
            scope: profile, email
            redirect-uri: "{baseUrl}/login/oauth2/code/{registrationId}"
          
          # Naver 소셜 로그인
          naver:
            client-id: k0DmfhChAiLbSox1P7wc
            client-secret: LH7_hF49Ox
            scope: name, email, nickname
            client-name: Naver
            authorization-grant-type: authorization_code
            redirect-uri: "{baseUrl}/login/oauth2/code/{registrationId}"
          
          # Kakao 소셜 로그인
          kakao:
            client-id: 2649e059472fae651af691c33bdc296b
            client-secret: i3tzOASVZcUYlTuCWIAiIkEGHC6b3rmn
            scope: profile_nickname
            client-name: Kakao
            authorization-grant-type: authorization_code
            redirect-uri: "{baseUrl}/login/oauth2/code/{registrationId}"
            client-authentication-method: client_secret_post
        
        provider:
          naver:
            authorization-uri: https://nid.naver.com/oauth2.0/authorize
            token-uri: https://nid.naver.com/oauth2.0/token
            user-info-uri: https://openapi.naver.com/v1/nid/me
            user-name-attribute: response
          
          kakao:
            authorization-uri: https://kauth.kakao.com/oauth/authorize
            token-uri: https://kauth.kakao.com/oauth/token
            user-info-uri: https://kapi.kakao.com/v2/user/me
            user-name-attribute: id

server:
  port: 8080
  servlet:
    context-path: /
  error:
    include-message: always

# OAuth2 리다이렉트 설정
app:
  oauth2:
    redirect-uri: ${OAUTH2_REDIRECT_URI:http://localhost:3000/oauth2/redirect}
    
logging:
  level:
    root: INFO
    com.example.carproject: DEBUG
    org.springframework.security: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE

