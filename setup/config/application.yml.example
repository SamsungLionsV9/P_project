spring:
  application:
    name: car-user-management
  
  main:
    allow-circular-references: true
  
  datasource:
    url: jdbc:mysql://localhost:3306/car_database?useSSL=false&serverTimezone=Asia/Seoul&characterEncoding=UTF-8&allowPublicKeyRetrieval=true
    username: root
    password: YOUR_MYSQL_PASSWORD  # MySQL 비밀번호 입력
    driver-class-name: com.mysql.cj.jdbc.Driver
    
  jpa:
    hibernate:
      ddl-auto: update
    show-sql: true
    properties:
      hibernate:
        format_sql: true
        dialect: org.hibernate.dialect.MySQL8Dialect
        use_sql_comments: true
    
  security:
    jwt:
      secret: YOUR_JWT_SECRET_BASE64_ENCODED  # 256bit 이상의 BASE64 인코딩된 시크릿 키
      expiration: 86400000  # 24시간 (밀리초)
    oauth2:
      client:
        registration:
          # ============================================
          # Google 소셜 로그인
          # https://console.cloud.google.com 에서 발급
          # ============================================
          google:
            client-id: YOUR_GOOGLE_CLIENT_ID
            client-secret: YOUR_GOOGLE_CLIENT_SECRET
            scope: profile, email
            redirect-uri: "{baseUrl}/login/oauth2/code/{registrationId}"
          
          # ============================================
          # Naver 소셜 로그인
          # https://developers.naver.com 에서 발급
          # ============================================
          naver:
            client-id: YOUR_NAVER_CLIENT_ID
            client-secret: YOUR_NAVER_CLIENT_SECRET
            scope: name, email, nickname
            client-name: Naver
            authorization-grant-type: authorization_code
            redirect-uri: "{baseUrl}/login/oauth2/code/{registrationId}"
          
          # ============================================
          # Kakao 소셜 로그인
          # https://developers.kakao.com 에서 발급
          # ============================================
          kakao:
            client-id: YOUR_KAKAO_REST_API_KEY
            client-secret: YOUR_KAKAO_CLIENT_SECRET
            scope: profile_nickname
            client-name: Kakao
            authorization-grant-type: authorization_code
            redirect-uri: "{baseUrl}/login/oauth2/code/{registrationId}"
            client-authentication-method: client_secret_post
        
        provider:
          naver:
            authorization-uri: https://nid.naver.com/oauth2.0/authorize
            token-uri: https://nid.naver.com/oauth2.0/token
            user-info-uri: https://openapi.naver.com/v1/nid/me
            user-name-attribute: response
          
          kakao:
            authorization-uri: https://kauth.kakao.com/oauth/authorize
            token-uri: https://kauth.kakao.com/oauth/token
            user-info-uri: https://kapi.kakao.com/v2/user/me
            user-name-attribute: id

server:
  port: 8080
  servlet:
    context-path: /
  error:
    include-message: always

# OAuth2 리다이렉트 설정 (프론트엔드 URL)
app:
  oauth2:
    redirect-uri: http://localhost:3000/oauth2/redirect
    
logging:
  level:
    root: INFO
    com.example.carproject: DEBUG
    org.springframework.security: DEBUG
    org.hibernate.SQL: DEBUG
    org.hibernate.type.descriptor.sql.BasicBinder: TRACE
